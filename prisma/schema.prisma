generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" //there's no need for an env file since it's an SQLITE db
}


model User {
  id          String     @id @default(uuid())
  firstName        String?
  lastName       String?
  email String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  roles       Role[]  
}

model Role {
   //id, name (e.g., ‘Admin’, ‘User’), permissions (e.g., ‘READ’,
//‘WRITE’).
id Int @id @default(autoincrement())
  name String
  permissions String  //sqlite doesn't allow for lists of primitive types aws well as enums, so I'd be using arrays in the form of strings.

  users User[] 

  //id, user_id, title, content, createdAt
}

